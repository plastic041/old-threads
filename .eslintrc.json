{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "next/core-web-vitals",
    "@typescript-eslint",
    "eslint:recommended",
    "plugin:react-hooks/recommended"
  ],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-undef": "off",
        "react/prop-types": "off"
      }
    },
    {
      "files": ["*.d.ts"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
